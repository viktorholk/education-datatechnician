@model dynamic


@{
ViewData["Title"] = "Home Page";

}

<h1 class="text-center display-4">Case Management</h1>
<div class="row">
    <div class="col">
        <h2>Clients</h2>
        <table class="table table-sm table-hover">
            <tr>
                <th>Id</th>
                <th>Username</th>
            </tr>
            @foreach(var item in Model.Clients) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Username</td>
            </tr>
            }
        </table>
    </div>

    <div class="col">
        <h2>Products</h2>
        <table class="table table-sm table-hover">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
            @foreach(var item in Model.Products) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
            </tr>
            }
        </table>
    </div>

</div>

<h2>Cases</h2>

<div class="row">
    <div class="col">
        <table class="table table-sm table-hover">
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>Product Id</th>
                <th>Client Id</th>
                <th>Resources Count</th>
            </tr>
            @foreach(var item in Model.Cases) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Type</td>
                <td>@item.Description</td>
                <td>@item.ProductId</td>
                <td>@item.ClientId</td>
                <td>@item.Resources.Count</td>
            </tr>
            }
        </table>

    </div>
</div>

<h2>Resource Tasks</h2>

<div class="row">
    <div class="col">
        <table class="table table-sm table-hover">
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Description</th>
                <th>CaseId</th>
            </tr>
            @foreach(var item in Model.ResourceTasks) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Status</td>
                <td>@item.Description</td>
                <td>@item.CaseId</td>
            </tr>
            }
        </table>
    </div>
</div>

