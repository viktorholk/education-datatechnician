<Window x:Class="Rest_and_Json.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rest_and_Json"
        mc:Ignorable="d"
        Title="JSON and Rest" Height="400" Width="250">

        <StackPanel
        x:Name="StackMain">
            <Button Margin="10,10,10,10" x:Name="RefreshButton" Click="RefreshButton_Click"  Content="Refresh" Width="150"></Button>

        <ScrollViewer Margin="10,10,10,10" Height="200">
            <StackPanel
                x:Name="StackButtonsPanel">
                
            </StackPanel>
            
        </ScrollViewer>
        <StackPanel Margin="10,10,10,10">
            <TextBox  TextAlignment="Center" x:Name="UrlTextbox"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="10,10,10,10" x:Name="AddNewButton" Click="AddNewButton_Click" Content="New"></Button>
                <Button Margin="10,10,10,10" x:Name="OpenInBrowserButton" Click="OpenInBrowserButton_Click" Content="Open Webpage"></Button>
            </StackPanel>
        </StackPanel>

        </StackPanel>

</Window>
